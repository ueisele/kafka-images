#!/usr/bin/env bash

UBI8_RELEASE=8.7
UBI8_VERSION=${UBI8_RELEASE}-1085

function kcat_image_tags () {
    local kcat_version=${1:?"Missing Kcat version as first parameter!"}
    local librdkafka_version=${2:?"Missing librdkafka version as second parameter!"}
    echo "${kcat_version}-librdkafka${librdkafka_version}-ubi${UBI8_VERSION}" "${kcat_version}-librdkafka${librdkafka_version}-ubi${UBI8_RELEASE}" "${kcat_version}-librdkafka${librdkafka_version}" "${kcat_version}"
}

function kcat_image_name () {
    local user=${1:?"Missing Docker registry user as first parameter!"}
    local git_repo="${2:?"Missing Git repo as second parameter!"}"
    local name="${KCAT_GITHUB_REPO//\//-}"
    echo "${user}/${name/edenhill-/}"
}
