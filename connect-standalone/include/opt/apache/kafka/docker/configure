. /opt/apache/kafka/docker/bash-config

godub ensure CONNECT_BOOTSTRAP_SERVERS
godub ensure CONNECT_KEY_CONVERTER
godub ensure CONNECT_VALUE_CONVERTER

if [ -z "${CONNECT_REST_PORT:-}" ]; then
  export CONNECT_REST_PORT=8083
fi

if [ -z "${CONNECT_REST_ADVERTISED_HOST_NAME:-}" ]; then
  export CONNECT_REST_ADVERTISED_HOST_NAME="$(hostname -i | cut -d" " -f1)"
fi

if [ -z "${CONNECT_OFFSET_STORAGE_FILE_FILENAME:-}" ]; then
  export CONNECT_OFFSET_STORAGE_FILE_FILENAME="/opt/apache/kafka/data/connect.offsets"
fi

# Fix for https://issues.apache.org/jira/browse/KAFKA-3988
if [[ ${CONNECT_INTERNAL_KEY_CONVERTER-} == "org.apache.kafka.connect.json.JsonConverter" ]] || [[ ${CONNECT_INTERNAL_VALUE_CONVERTER-} == "org.apache.kafka.connect.json.JsonConverter" ]]
then
  export CONNECT_INTERNAL_KEY_CONVERTER_SCHEMAS_ENABLE=false
  export CONNECT_INTERNAL_VALUE_CONVERTER_SCHEMAS_ENABLE=false
fi

if [[ $CONNECT_KEY_CONVERTER == "io.confluent.connect.avro.AvroConverter" ]]
then
  godub ensure CONNECT_KEY_CONVERTER_SCHEMA_REGISTRY_URL
fi

if [[ $CONNECT_VALUE_CONVERTER == "io.confluent.connect.avro.AvroConverter" ]]
then
  godub ensure CONNECT_VALUE_CONVERTER_SCHEMA_REGISTRY_URL
fi

# ensure connect connector properties

godub ensure CONNECTOR_NAME
godub ensure CONNECTOR_CONNECTOR_CLASS

# templating

godub path -r -w /opt/apache/kafka/config

godub template -i "/opt/apache/kafka/docker/*.gotpl" -o "/opt/apache/kafka/config/"