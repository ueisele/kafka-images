# https://github.com/open-telemetry/opentelemetry-java/blob/main/sdk-extensions/autoconfigure/README.md
if [ -z "${OTEL_JAVAAGENT_ENABLED:-}" ] || [[ ${OTEL_JAVAAGENT_ENABLED:-} == "true" ]]; then
  
  export KAFKA_OPTS="${KAFKA_OPTS:-} -javaagent:/opt/opentelemetry/javaagent/opentelemetry-javaagent.jar"

  if [ -z "${OTEL_SERVICE_NAME:-}" ]; then
    export OTEL_SERVICE_NAME="kafka-broker"
  fi

  if [ -z "${OTEL_INSTRUMENTATION_COMMON_DEFAULT_ENABLED:-}" ]; then
    export OTEL_INSTRUMENTATION_COMMON_DEFAULT_ENABLED="false"
  fi

  if [ -z "${OTEL_JMX_KAFKA_BROKER_ENABLED:-}" ] || [[ ${OTEL_JMX_KAFKA_BROKER_ENABLED:-} == "true" ]]; then
    export OTEL_JMX_CONFIG="/opt/opentelemetry/javaagent/kafka-broker.yaml,${OTEL_JMX_CONFIG:-}"
  fi

  # https://github.com/open-telemetry/opentelemetry-java/blob/main/sdk-extensions/autoconfigure/README.md#exporters
  if [ -z "${OTEL_METRICS_EXPORTER:-}" ]; then
    export OTEL_METRICS_EXPORTER=prometheus
    export OTEL_EXPORTER_PROMETHEUS_PORT=${OTEL_EXPORTER_PROMETHEUS_PORT:-9464}
  fi
  if [ -z "${OTEL_TRACES_EXPORTER:-}" ]; then
    export OTEL_TRACES_EXPORTER=none
  fi
  if [ -z "${OTEL_LOGS_EXPORTER:-}" ]; then
    export OTEL_LOGS_EXPORTER=none
  fi

fi
